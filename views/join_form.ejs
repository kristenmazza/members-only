<!DOCTYPE html>
<html>
  <head>
    <%- include("partials/head"); %>
  </head>
  <body>
    <%- include("partials/header"); %>
    <div class="main-container">
      <div class="content">
        <h1><%= title %></h1>
        <div class="row">
          <form class="col s12" method="POST" action="/join">
            <div class="row">
              <div class="input-field col s12">
                <input
                  name="secret_password"
                  id="secret_password"
                  type="password"
                  class="validate"
                />
                <label class="active" for="secret_password"
                  >Secret Password</label
                >
              </div>
            </div>
            <div class="errors">
              <ul>
                <% if (typeof errors !== 'undefined') { %> <% for (let i = 0; i
                < errors.length; i++) { %> <% const error = errors[i] %>
                <li><%= error.msg %></li>
                <% } } %><% if (typeof errorPassword !== 'undefined') { %>
                <li><%= errorPassword %></li>
                <% } %>
              </ul>
            </div>
            <div class="center-align">
              <button
                class="btn waves-effect waves-light"
                type="submit"
                name="action"
              >
                Join
                <i class="material-icons right">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("partials/footer"); %> <%- include("partials/js_tags"); %>
  </body>
</html>
