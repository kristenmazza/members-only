<!DOCTYPE html>
<html>
  <head>
    <%- include("partials/head"); %>
  </head>
  <body>
    <%- include("partials/header"); %>
    <div class="main-container">
      <div class="content">
        <h1><%= title %></h1>
        <div class="row">
          <form class="col s12" method="POST" action="/login">
            <div class="row">
              <div class="input-field col s12">
                <input
                  name="username"
                  id="username"
                  type="email"
                  class="validate"
                />
                <label class="active" for="username">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input
                  name="password"
                  id="password"
                  type="password"
                  class="validate"
                />
                <label class="active" for="password">Password</label>
              </div>
            </div>
            <div class="errors">
              <ul>
                <% if (locals.errorMessage) { %>
                <li><%= locals.errorMessage %></li>
                <% } %> <% if (typeof errors !== 'undefined') { %> <% for (let i
                = 0; i < errors.length; i++) { %> <% const error = errors[i] %>
                <li><%= error.msg %></li>
                <% } } %>
              </ul>
            </div>
            <button
              class="btn waves-effect waves-light"
              type="submit"
              name="action"
            >
              Log in
              <i class="material-icons right">send</i>
            </button>
          </form>
        </div>
      </div>
    </div>
    <%- include("partials/footer"); %> <%- include("partials/js_tags"); %>
  </body>
</html>
